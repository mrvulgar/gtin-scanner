<?xml version="1.0" encoding="utf-8"?>
<!--
========================================
GTIN Scanner Live - IIS Configuration
========================================
Этот файл конфигурирует IIS для работы с Python ASGI приложением (Gradio/FastAPI)
-->
<configuration>
  <system.webServer>
    <serverRuntime uploadReadAheadSize="524288000" />
    
    <!-- Обработчик для Python приложения через HttpPlatformHandler -->
    <handlers>
      <add name="httpPlatformHandler" 
           path="*" 
           verb="*" 
           modules="httpPlatformHandler" 
           resourceType="Unspecified" />
    </handlers>
    
    <!-- Настройки HttpPlatformHandler -->
    <httpPlatform processPath="%SystemDrive%\inetpub\wwwroot\gtin-scanner\venv\Scripts\python.exe"
                  arguments="-m uvicorn gtin_scanner_live_iis:app --host 0.0.0.0 --port %HTTP_PLATFORM_PORT%"
                  stdoutLogEnabled="true"
                  stdoutLogFile=".\logs\stdout.log"
                  startupTimeLimit="60"
                  requestTimeout="00:10:00">
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="%SystemDrive%\inetpub\wwwroot\gtin-scanner" />
        <environmentVariable name="GRADIO_SERVER_NAME" value="0.0.0.0" />
        <environmentVariable name="PYTHONIOENCODING" value="utf-8" />
        <environmentVariable name="TMP" value="%SystemDrive%\inetpub\wwwroot\gtin-scanner\temp" />
        <environmentVariable name="TEMP" value="%SystemDrive%\inetpub\wwwroot\gtin-scanner\temp" />
        <environmentVariable name="GRADIO_TEMP_DIR" value="%SystemDrive%\inetpub\wwwroot\gtin-scanner\temp" />
      </environmentVariables>
    </httpPlatform>
    
    <!-- Правила перенаправления для Websockets -->
    <rewrite>
      <rules>
        <rule name="Websocket Proxy" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP:Upgrade}" pattern="websocket" ignoreCase="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:{HTTP_PLATFORM_PORT}/{R:0}" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Настройки безопасности -->
    <security>
      <requestFiltering>
        <!-- Разрешаем большие файлы (PDF могут быть большими) -->
        <requestLimits maxAllowedContentLength="524288000" />
      </requestFiltering>
    </security>
    
    <!-- Настройки статических файлов -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".wasm" mimeType="application/wasm" />
    </staticContent>
    
    <!-- Отключаем компрессию для WebSocket -->
    <urlCompression doStaticCompression="true" doDynamicCompression="false" />
    
  </system.webServer>
  
  <!-- Настройки времени выполнения -->
  <system.web>
    <httpRuntime maxRequestLength="512000" executionTimeout="300" />
  </system.web>
  
</configuration>

